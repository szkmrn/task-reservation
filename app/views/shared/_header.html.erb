<div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-dark border-bottom shadow-sm">
  <img class="my-0 mr-md-auto font-weight-normal" id="home-logo" src="https://presite-potepancamp-rails-02.herokuapp.com/assets/logo.png">
  <% if user_signed_in? %>
    <div class="p-2 m-1 text-white"><%= current_user.name %></div>
    <div class="p-2 m-1">
      <%= image_tag current_user.image ,style: "border-radius: 50%",:size => "65x65" %>
    </div>
  <% else %>  
    <div class="p-2 m-1 btn btn-outline-primary text-white bg-primary"><%= link_to"ログイン","/users/sign_in",class:"home-link-user"%></div>
    <div class="p-2 m-1 btn btn-outline-info text-white bg-info"><%= link_to"新規登録","/users/sign_up",class:"home-link-user"%></div>
  <% end %>  
</div>
    