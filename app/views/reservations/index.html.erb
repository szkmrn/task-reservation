<div class="container-fiuld reservations">
  <h4 class="pb-4">予約済みルーム一覧</h4>
  <table>
    <thead>
      <tr class="text-center">
        <th>ルーム画像</th>
        <th>ルーム名</th>
        <th>ルーム紹介</th>
        <th>合計料金</th>
        <th>開始日</th>
        <th>終了日</th>
        <th>予約確定日時</th>
      </tr>
    </thead>
    <tbody>
      <% @reservation.each do |r| %>
        <tr>
          <td>
            <%= r.room_id %>
          </td>
         
          <td>
            <%= r.start_date %>
          </td>
          <td>
            <%= r.end_date %>
          </td>
          <td>
            <%= r.total_price %>
          </td>

      
      
        </tr>
      <% end %>  
    </tbody>
  </table>
</div>  